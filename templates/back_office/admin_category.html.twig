{% extends 'base_admin.html.twig' %}

{% block title %}
    BlogSymfony | Catégories
{% endblock %}

{% block body %}
{# {{dump(titreCat)}} #}
<table class="table table-striped table-dark table-bordered" id="table-category">
    <thead>
    {% for data in titreCat %}
        <th class="text-center">{{data}}</th>
    {% endfor %}
        <th>Action</th>
    </thead>
    <tbody>
    {% for data in category %}   
        <tr>
            <th class="text-center">{{data.titre|capitalize}}</th>
            <td class="text-center">Description : {{data.description|striptags|slice(0,100)}}</td>
            <td class="text-center">Nombre d'article liés à la catégorie : {{data.articles|length}}</td>
            <td>
                <a href="" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                <a href="" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<hr>
{{form_start(formCategory)}}
    {{form_widget(formCategory)}}
    <button class="btn btn-dark">Envoyer</button>
{{form_end(formCategory)}}




{% endblock %}